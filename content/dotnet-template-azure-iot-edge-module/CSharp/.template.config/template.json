{
    "$schema": "http://json.schemastore.org/template",
    "author": "Microsoft",
    "classifications": [
        "Console"
    ],
    "name": "Azure E4K Edge Module",
    "identity": "Microsoft.Azure.E4K.ModuleTemplate",
    "groupIdentity": "Microsoft.Azure.E4K.ModuleTemplate",
    "shortName": "azedgemodule",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "sourceName": "SampleModule",
    "preferNameDirectory": true,
    "primaryOutputs": [
        {
            "path": "."
        }
    ],
    "symbols": {
        "skipRestore": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false"
        },
        "repository": {
            "type": "parameter",
            "defaultValue": "<registry>/<repo-name>",
            "replaces": "<repository>"
        },
        "samplemodule" : {
            "type": "generated",
            "generator": "casing",
            "parameters": {
                "source": "name",
                "toLower": true
            }
        }
    },
    "sources": [
        {
            "exclude": [
                ".template.config/*",
                "bin/**/*",
                "obj/**/*"
            ]
        }
    ],
    "postActions": [
        {
            "condition": "(!skipRestore)",
            "description": "Restore NuGet packages required by this project.",
            "manualInstructions": [
                {
                    "text": "Run 'dotnet restore'"
                }
            ],
            "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
            "continueOnError": true
        }
    ]
}
